# Port for the backend server
PORT=3001

# Supabase credentials
SUPABASE_URL="your_supabase_url"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# Firebase Admin SDK credentials
# This should be the JSON content of your Firebase service account key, as a single-line string or properly escaped multi-line string.
# Example (ensure it's a valid JSON string when you put it in your actual .env file):
# FIREBASE_SERVICE_ACCOUNT_KEY='{"type": "service_account", "project_id": "...", ...}'
FIREBASE_SERVICE_ACCOUNT_KEY="your_firebase_service_account_key_json_string"

